<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.cpi2.controllers.Progression"
            stylesheets="@/css/style2.css">

    <top>
        <VBox spacing="10" styleClass="header-container">
            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="dashboard-header">
                <Label text="Tableau de Bord: Suivi de Progression" styleClass="dashboard-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="ID Candidat:" styleClass="form-label"/>
                    <TextField fx:id="candidatIdField" prefWidth="150" styleClass="search-field"/>
                    <Button text="Rechercher" onAction="#rechercheCandidatAction" styleClass="search-button"/>
                </HBox>
            </HBox>

            <HBox spacing="15" styleClass="info-panel">
                <VBox spacing="5" styleClass="info-card" HBox.hgrow="ALWAYS">
                    <Label text="Informations Candidat" styleClass="card-title"/>
                    <GridPane hgap="10" vgap="5">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="80"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>
                        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
                        <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false" styleClass="data-field"/>
                        <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
                        <TextField fx:id="prenomField" GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false" styleClass="data-field"/>
                    </GridPane>
                </VBox>

                <VBox spacing="5" styleClass="info-card" HBox.hgrow="ALWAYS">
                    <Label text="Résumé de Progression" styleClass="card-title"/>
                    <GridPane hgap="10" vgap="5">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="150"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>
                        <Label text="Total séances code:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="metric-label"/>
                        <Label fx:id="totalSeancesCodeLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="metric-value"/>
                        <Label text="Séances code complètes:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="metric-label"/>
                        <Label fx:id="seancesCodeCompletesLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="metric-value"/>
                    </GridPane>
                </VBox>
            </HBox>

            <VBox spacing="5" styleClass="progress-container">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Progression totale:" styleClass="progress-label"/>
                    <ProgressBar fx:id="progressionTotaleBar" progress="0.6" prefWidth="300" styleClass="progress-bar"/>
                    <Label fx:id="progressionPourcentageLabel" text="60.0%" styleClass="progress-percentage"/>
                </HBox>
            </VBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="dashboard-content">
            <VBox spacing="15">
                <Label text="Visualisation de la Progression" styleClass="section-title"/>

                <HBox spacing="15" alignment="CENTER">
                    <VBox spacing="10" styleClass="chart-container" HBox.hgrow="ALWAYS">
                        <Label text="Répartition des Séances" styleClass="chart-title"/>
                        <PieChart fx:id="progressionPieChart" legendVisible="true" prefHeight="300" styleClass="dashboard-chart"/>
                    </VBox>

                    <VBox spacing="10" styleClass="chart-container" HBox.hgrow="ALWAYS">
                        <Label text="Séances Planifiées vs Complétées" styleClass="chart-title"/>
                        <BarChart fx:id="progressionBarChart" prefHeight="300" styleClass="dashboard-chart">
                            <xAxis>
                                <CategoryAxis label="Type"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Nombre de séances"/>
                            </yAxis>
                        </BarChart>
                    </VBox>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>