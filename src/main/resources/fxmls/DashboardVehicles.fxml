<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="root" stylesheets="@/css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cpi2.controllers.DashboardVehicles">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <top>
        <VBox alignment="CENTER" spacing="10">
            <Label styleClass="dashboard-title" text="Tableau de Bord des Véhicules" />
            <HBox alignment="CENTER" spacing="15" styleClass="period-selector">
                <Label styleClass="form-label" text="Filtrer par:" />
                <ComboBox fx:id="filterCombo" promptText="Tous les véhicules" styleClass="form-field" />
                <Button onAction="#handleApplyFilter" styleClass="button, submit-button" text="Appliquer" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="transparent-scroll-pane">
            <VBox spacing="20">
                
                <HBox alignment="CENTER" spacing="15">
                    <VBox.margin>
                        <Insets bottom="10" top="10" />
                    </VBox.margin>
                    
                    
                    <VBox styleClass="dashboard-card" HBox.hgrow="ALWAYS">
                        <Label styleClass="card-title" text="Total des Véhicules" />
                        <Label fx:id="totalVehiclesLabel" styleClass="card-value" text="12" />
                    </VBox>
                    
                    
                    <VBox styleClass="dashboard-card" HBox.hgrow="ALWAYS">
                        <Label styleClass="card-title" text="Véhicules Disponibles" />
                        <Label fx:id="availableVehiclesLabel" styleClass="card-value" text="8" />
                    </VBox>
                    
                    
                    <VBox styleClass="dashboard-card" HBox.hgrow="ALWAYS">
                        <Label styleClass="card-title" text="Entretiens à Faire" />
                        <Label fx:id="maintenanceDueLabel" styleClass="card-value" text="3" />
                    </VBox>
                    
                    
                    <VBox styleClass="dashboard-card" HBox.hgrow="ALWAYS">
                        <Label styleClass="card-title" text="Kilométrage Total" />
                        <Label fx:id="totalKmLabel" styleClass="card-value" text="157,340 km" />
                    </VBox>
                </HBox>
                
                
                <HBox alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS">
                    
                    <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
                        <Label styleClass="chart-title" text="Utilisation des Véhicules" />
                        <PieChart fx:id="vehicleUsageChart" animated="true" labelsVisible="true" VBox.vgrow="ALWAYS" />
                    </VBox>
                    
                    
                    <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
                        <Label styleClass="chart-title" text="Historique des Entretiens" />
                        <BarChart fx:id="maintenanceHistoryChart" animated="true" legendVisible="false" VBox.vgrow="ALWAYS">
                            <xAxis>
                                <CategoryAxis fx:id="maintenanceMonthAxis" label="Mois" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="maintenanceCountAxis" label="Nombre d'entretiens" />
                            </yAxis>
                        </BarChart>
                    </VBox>
                </HBox>
                
                
                <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
                    <Label styleClass="table-title" text="État des Véhicules" />
                    <TableView fx:id="vehiclesTable" styleClass="custom-table-view" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="vehicleIdColumn" prefWidth="60" text="ID" />
                            <TableColumn fx:id="vehicleModelColumn" prefWidth="150" text="Modèle" />
                            <TableColumn fx:id="vehiclePlateColumn" prefWidth="120" text="Immatriculation" />
                            <TableColumn fx:id="vehicleKmColumn" prefWidth="100" text="Kilométrage" />
                            <TableColumn fx:id="vehicleStatusColumn" prefWidth="100" text="Statut" />
                            <TableColumn fx:id="vehicleLastMaintenanceColumn" prefWidth="120" text="Dernier Entretien" />
                            <TableColumn fx:id="vehicleNextMaintenanceColumn" prefWidth="120" text="Prochain Entretien" />
                        </columns>
                    </TableView>
                </VBox>
                
                
                <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
                    <Label styleClass="table-title" text="Alertes d'Entretien" />
                    <TableView fx:id="maintenanceAlertsTable" styleClass="custom-table-view" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="alertVehicleColumn" prefWidth="150" text="Véhicule" />
                            <TableColumn fx:id="alertTypeColumn" prefWidth="120" text="Type" />
                            <TableColumn fx:id="alertDueDateColumn" prefWidth="120" text="Date Prévue" />
                            <TableColumn fx:id="alertStatusColumn" prefWidth="100" text="Statut" />
                            <TableColumn fx:id="alertPriorityColumn" prefWidth="80" text="Priorité" />
                            <TableColumn fx:id="alertActionsColumn" prefWidth="186.39996337890625" text="Actions" />
                        </columns>
                    </TableView>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>

