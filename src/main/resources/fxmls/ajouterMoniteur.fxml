<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cpi2.controllers.AjouterMoniteur"
      stylesheets="@/css/style.css"
      alignment="CENTER" spacing="15" styleClass="form-container">

    <Label text="Ajouter un Moniteur" styleClass="form-title"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100"/>
            <ColumnConstraints halignment="LEFT" minWidth="200" hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="nomField" styleClass="form-field"/>
        </VBox>

        <Label text="Prénom:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <TextField fx:id="prenomField" styleClass="form-field"/>
        </VBox>

        <Label text="CIN:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <TextField fx:id="cinField" styleClass="form-field"/>
        </VBox>

        <Label text="Adresse:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <TextField fx:id="adresseField" styleClass="form-field"/>
        </VBox>

        <Label text="Téléphone:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <TextField fx:id="telephoneField" styleClass="form-field"/>
        </VBox>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <TextField fx:id="emailField" styleClass="form-field"/>
        </VBox>

        <Label text="Date d'embauche:" GridPane.columnIndex="0" GridPane.rowIndex="6" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <DatePicker fx:id="dateEmbaucheField" styleClass="datepick"/>
        </VBox>

        <Label text="Type de Permis:" GridPane.columnIndex="0" GridPane.rowIndex="7" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <ComboBox fx:id="typePermisComboBox" styleClass="form-field"/>
        </VBox>

    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Annuler" onAction="#cancelAction" styleClass="button"/>
        <Button text="Ajouter" onAction="#ajouterAction" styleClass="button"/>
    </HBox>

</VBox>
