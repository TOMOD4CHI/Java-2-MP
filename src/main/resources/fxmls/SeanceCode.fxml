<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.cpi2.controllers.SeanceCode"
           stylesheets="@/css/style.css"
           prefWidth="800" prefHeight="500">

    <HBox spacing="20" alignment="center">
        <VBox spacing="15" alignment="center" styleClass="form-container" HBox.hgrow="ALWAYS" maxWidth="400">
            <Label text="Planifier une Séance de Code" styleClass="form-title"/>

            <GridPane hgap="10" vgap="5" alignment="center">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="150" prefWidth="200"/>
                </columnConstraints>

                <Label text="Candidat :" styleClass="form-label"
                       GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="candidatCombo" styleClass="form-field" promptText="Sélectionner un candidat"
                           GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label fx:id="candidatError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0; -fx-text-fill: red;" visible="false" 
                       GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="LEFT"/>

                <Label text="Capacité de la Séance :" styleClass="form-label"
                       GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="capfield" styleClass="form-field" promptText="Nombre de places"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="capaciteError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0; -fx-text-fill: red;" visible="false" 
                       GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="LEFT"/>

                <Label text="Date de la Séance :" styleClass="form-label"
                       GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <DatePicker fx:id="datefield" styleClass="form-field"
                            GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Label fx:id="dateError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0; -fx-text-fill: red;" visible="false" 
                       GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.halignment="LEFT"/>

                <Label text="Heure de la Séance :" styleClass="form-label"
                       GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextField fx:id="tempsfield" styleClass="form-field" promptText="Format: HH:mm"
                           GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <Label fx:id="tempsError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0; -fx-text-fill: red;" visible="false" 
                       GridPane.rowIndex="7" GridPane.columnIndex="1" GridPane.halignment="LEFT"/>

                <Label text="Moniteur :" styleClass="form-label"
                       GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                <TextField fx:id="moniteurfield" styleClass="form-field" editable="false" promptText="Sélectionnez un moniteur"
                           GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                <Label fx:id="moniteurError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0; -fx-text-fill: red;" visible="false" 
                       GridPane.rowIndex="9" GridPane.columnIndex="1" GridPane.halignment="LEFT"/>
                
                <Label text="Salle :" styleClass="form-label"
                       GridPane.columnIndex="0" GridPane.rowIndex="10"/>
                <ComboBox fx:id="salleCombo" styleClass="form-field" promptText="Sélectionner une salle"
                           GridPane.columnIndex="1" GridPane.rowIndex="10"/>
                <Label fx:id="salleError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0; -fx-text-fill: red;" visible="false" 
                       GridPane.rowIndex="11" GridPane.columnIndex="1" GridPane.halignment="LEFT"/>
            </GridPane>

            <HBox spacing="15" alignment="center" styleClass="button-container">
                <VBox.margin>
                    <Insets top="15" bottom="10"/>
                </VBox.margin>
                <Button fx:id="cancelButton" text="Annuler" styleClass="button, cancel-button" onAction="#handleCancel"/>
                <Button fx:id="planifierButton" text="Planifier" styleClass="button, submit-button" onAction="#handlePlanifier"/>
            </HBox>
        </VBox>

        <VBox spacing="10" HBox.hgrow="ALWAYS" styleClass="form-container">
            <Label text="Liste des Moniteurs" styleClass="form-title"/>
            <TableView fx:id="moniteurTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idMoniteurColumn" text="ID" prefWidth="100"/>
                    <TableColumn fx:id="nomMoniteurColumn" text="Nom" prefWidth="150"/>
                    <TableColumn fx:id="prenomMoniteurColumn" text="Prénom" prefWidth="150"/>
                    <TableColumn fx:id="specialiteColumn" text="Spécialité" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>
</StackPane>
