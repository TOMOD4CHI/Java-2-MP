<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.cpi2.controllers.SeanceCode"
           stylesheets="@/css/style.css"
           prefWidth="800" prefHeight="500">

    <HBox spacing="20" alignment="center">
        <VBox spacing="15" alignment="center" styleClass="form-container" HBox.hgrow="ALWAYS" maxWidth="400">
            <Label text="Planifier une Séance de Code" styleClass="form-title"/>

            <HBox spacing="10" alignment="center_left">
                <Label text="Capacité de la Séance :" styleClass="form-label" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="capfield" styleClass="form-field" HBox.hgrow="ALWAYS" promptText="Nombre de places"/>
            </HBox>
            <HBox spacing="10" alignment="center_left">
                <Label text="Date de la Séance :" styleClass="form-label" HBox.hgrow="ALWAYS"/>
                <DatePicker fx:id="datefield" styleClass="form-field" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10" alignment="center_left">
                <Label text="Heure de la Séance :" styleClass="form-label" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="tempsfield" styleClass="form-field" HBox.hgrow="ALWAYS" promptText="Format: HH:mm"/>
            </HBox>

            <HBox spacing="10" alignment="center_left">
                <Label text="Moniteur :" styleClass="form-label" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="moniteurfield" styleClass="form-field" HBox.hgrow="ALWAYS" editable="false" promptText="Sélectionnez un moniteur"/>
            </HBox>
            
            <HBox spacing="15" alignment="center">
                <Button fx:id="cancelButton" text="Annuler" styleClass="button" onAction="#handleCancel"/>
                <Button fx:id="planifierButton" text="Planifier" styleClass="button" onAction="#handlePlanifier"/>
            </HBox>
        </VBox>

        <VBox spacing="10" HBox.hgrow="ALWAYS" styleClass="form-container">
            <Label text="Liste des Moniteurs" styleClass="form-title"/>
            <TableView fx:id="moniteurTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idMoniteurColumn" text="ID" prefWidth="100"/>
                    <TableColumn fx:id="nomMoniteurColumn" text="Nom" prefWidth="150"/>
                    <TableColumn fx:id="prenomMoniteurColumn" text="Prénom" prefWidth="150"/>
                    <TableColumn fx:id="specialiteColumn" text="Spécialité" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>
</StackPane>