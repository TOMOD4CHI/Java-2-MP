<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@/css/stylee.css"
            fx:controller="org.cpi2.controllers.MiseAJourKilometrage"
            styleClass="main-container">

    <top>
        <VBox spacing="10" styleClass="header-container">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Mise à jour du Kilométrage" styleClass="title-label"/>
            <Separator styleClass="separator"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER" styleClass="odometer-container">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>



            <VBox spacing="10" maxWidth="450" styleClass="selector-container">
                <Label text="Sélectionner un véhicule" styleClass="form-header"/>
                <ComboBox fx:id="vehiculeComboBox" maxWidth="Infinity" promptText="Sélectionner un véhicule"
                          styleClass="form-field"/>
            </VBox>

            <VBox fx:id="infoContainer" spacing="10" maxWidth="450" styleClass="info-container">
                <HBox styleClass="info-box">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Immatriculation" styleClass="form-label"/>
                        <Label fx:id="immatriculationLabel" text="--" styleClass="form-label"/>
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Marque / Modèle" styleClass="form-label"/>
                        <Label fx:id="marqueModeleLabel" text="--" styleClass="form-label"/>
                    </VBox>
                </HBox>

                <VBox spacing="5" styleClass="current-km-box">
                    <Label text="Kilométrage actuel" styleClass="form-label"/>
                    <Label fx:id="kilometrageActuelLabel" text="--" styleClass="form-label"/>
                </VBox>
            </VBox>

            <VBox spacing="10" maxWidth="450" styleClass="update-container">
                <Label text="Nouveau kilométrage" styleClass="form-header"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="nouveauKilometrageField" promptText="Entrez le nouveau kilométrage"
                               HBox.hgrow="ALWAYS" styleClass="form-field"/>
                    <Label text="km" styleClass="form-label"/>
                </HBox>
                <Label fx:id="infoKilometrageLabel"
                       text="Le nouveau kilométrage doit être supérieur à l'ancien"
                       styleClass="info-note"/>
            </VBox>

            <HBox spacing="15" alignment="CENTER" styleClass="button-container">
                <Button fx:id="annulerBtn" text="Annuler" minWidth="120"
                        onAction="#handleAnnuler" styleClass="cancel-button"/>
                <Button fx:id="mettreAJourBtn" text="Mettre à jour" minWidth="120"
                        onAction="#handleMettreAJour" styleClass="button, submit-button"/>
            </HBox>

            <Label fx:id="messageLabel" styleClass="message-label"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="status-bar">
            <padding>
                <Insets top="5" right="15" bottom="5" left="15"/>
            </padding>
            <Label fx:id="lastUpdateLabel" text="Dernière mise à jour: Jamais" styleClass="status-label"/>
        </HBox>
    </bottom>

</BorderPane>