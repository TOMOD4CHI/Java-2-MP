<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cpi2.controllers.Documents"
      spacing="16" alignment="CENTER" stylesheets="/css/style2.css"
      styleClass="form-container">
    <GridPane hgap="20" vgap="16">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="80"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="80"/>
        </columnConstraints>

        <!-- Left Form Section -->
        <VBox spacing="16" styleClass="card" GridPane.columnIndex="0">
            <GridPane hgap="12" vgap="12" maxWidth="600">
                <Label text="Candidat:" GridPane.rowIndex="0" GridPane.columnIndex="0"  GridPane.columnSpan="2" styleClass="form-label" />
                <ComboBox fx:id="candidatComboBox" GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="form-field" prefWidth="250"/>

                <Label text="Nom du document:" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" styleClass="form-label"/>
                <TextField fx:id="nomDocumentField" GridPane.rowIndex="1" GridPane.columnIndex="2" styleClass="form-field" prefWidth="250"/>

                <Label text="Type de document:" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" styleClass="form-label"/>
                <ComboBox fx:id="typeDocumentComboBox" GridPane.rowIndex="2" GridPane.columnIndex="2" styleClass="form-field" prefWidth="250"/>

                <Label text="Date d'ajout:" GridPane.rowIndex="3" GridPane.columnIndex="0"  GridPane.columnSpan="2" styleClass="form-label"/>
                <DatePicker fx:id="dateAjoutPicker" GridPane.rowIndex="3" GridPane.columnIndex="2" styleClass="form-field" prefWidth="250"/>

                <Label text="Fichier:" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" styleClass="form-label"/>
                <HBox spacing="8" GridPane.rowIndex="4" GridPane.columnIndex="2">
                    <Label fx:id="selectedFileLabel" text="Aucun fichier sélectionné" styleClass="form-label"/>
                    <Button fx:id="browseButton" text="..." onAction="#browseFile" styleClass="button-small"/>
                </HBox>
            </GridPane>
        </VBox>

        <VBox spacing="16" styleClass="card" GridPane.columnIndex="1" alignment="TOP_CENTER">
            <Label text="Documents enregistrés" styleClass="form-title"/>

            <TableView fx:id="documentsTableView" VBox.vgrow="ALWAYS" prefHeight="300" prefWidth="450">
                <columns>
                    <TableColumn fx:id="nomColumn" text="Nom" prefWidth="150"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="150"/>
                    <TableColumn fx:id="dateColumn" text="Date d'ajout" prefWidth="150"/>
                </columns>
            </TableView>

            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button fx:id="loadButton" text="Charger Documents" onAction="#loadDocuments" styleClass="button primary"/>
                <Button fx:id="submitButton" text="Enregistrer" onAction="#saveDocument" styleClass="button"/>
            </HBox>
        </VBox>
    </GridPane>

</VBox>
