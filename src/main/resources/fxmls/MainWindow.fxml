<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.cpi2.controllers.MainWindow"
            stylesheets="@/css/style.css">


    <left>
        <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="false">
        <content>
        <VBox spacing="20" fx:id="sidebarContainer" styleClass="sidebar" >


        <Label text="AUTO-ECOLE" style="-fx-font-size: 22px; -fx-text-fill: #ffffff; -fx-font-weight: bold;"/>


            <HBox fx:id="profileMenu">
                <Label text="ðŸ‘¤--â–¶" fx:id="profileArrow" style="-fx-text-fill: #2C3E50; -fx-font-size: 32px;"/>
                <Label text="Profile" fx:id="profileLabel" styleClass="menu-label"/>
            </HBox>
            <VBox fx:id="profileSubmenu" visible="false" managed="false" styleClass="submenu">
                <Label text="View Profile"  styleClass="submenu-label"/>
                <Label text="Edit Profile" styleClass="submenu-label"/>
            </VBox>

            <HBox fx:id="coursesMenu">
                <Label text="â–¶" fx:id="coursesArrow" style="-fx-text-fill: #2C3E50; -fx-font-size: 12px;"/>
                <Label text="Courses" fx:id="coursesLabel" styleClass="menu-label"/>
            </HBox>
            <VBox fx:id="coursesSubmenu" visible="false" managed="false" styleClass="submenu">
                <Label text="All Courses" styleClass="submenu-label"/>
                <Label text="Current Courses" styleClass="submenu-label"/>
                <Label text="Completed Courses" styleClass="submenu-label"/>
            </VBox>


            <HBox fx:id="paymentsMenu">
                <Label text="â–¶" fx:id="paymentsArrow" style="-fx-text-fill: #2C3E50; -fx-font-size: 12px;"/>
                <Label text="Payments" fx:id="paymentsLabel" styleClass="menu-label"/>
            </HBox>
            <VBox fx:id="paymentsSubmenu" visible="false" managed="false" styleClass="submenu">
                <Label text="Payment History" styleClass="submenu-label"/>
                <Label text="Subscription" styleClass="submenu-label"/>
            </VBox>
            <HBox fx:id="example">
                <Label text="â–¶" fx:id="exampleArrow" style="-fx-text-fill: #2C3E50; -fx-font-size: 12px;"/>
                <Label text="Example" fx:id="exampleLabel" styleClass="menu-label"/>
            </HBox>
            <VBox fx:id="exampleSubmenu" visible="false" managed="false" styleClass="submenu">
                <Label text="usecase1" onMouseClicked="#loadUsecase1" styleClass="submenu-label"/>
                <Label text="usecase2" onMouseClicked="#loadUsecase2" styleClass="submenu-label"/>
                <Label text="usecase3" styleClass="submenu-label"/>
                <Label text="usecase4" styleClass="submenu-label"/>
                <Label text="usecase5" styleClass="submenu-label"/>
                <Label text="usecase6" styleClass="submenu-label"/>
            </VBox>

        </VBox>
        </content>
        </ScrollPane>
    </left>


    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #F4F4F4; -fx-padding: 20;">
            <Label text="APP INFO HERE:" fx:id="defaultLabel"
                   style="-fx-font-size: 30px; -fx-text-fill: #2C3E50;"/>
        </StackPane>
    </center>
</BorderPane>
