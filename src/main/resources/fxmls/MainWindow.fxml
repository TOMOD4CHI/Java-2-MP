<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cpi2.controllers.MainWindow" stylesheets="@/css/style.css">
    <top>
        <MenuBar>
            <Menu text="🚗Auto-ecole">
                <MenuItem text="📝 ajouter une ecole " onAction="#loadAjouterEcole" />
