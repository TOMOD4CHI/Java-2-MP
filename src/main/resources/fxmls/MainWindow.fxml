                <MenuItem text="📝 Confirmer présence" />
                <MenuItem text="📆 Gérer plannings" />
            </Menu>
            <Menu text="🚘Véhicules et Entretiens">
                <MenuItem text="🚗 Gérer véhicules" />
                <MenuItem text="🔧 Suivi des entretiens" />
                <MenuItem text="📊 Mettre à jour kilométrage" />
                <MenuItem text="⏳ Notifications (vignette, assurance)" />
            </Menu>
            <Menu text="💰Paiements">
                <MenuItem text="💳 Enregistrer un paiement" />
                <MenuItem text="📜 Générer une facture" />
                <MenuItem text="📜 Historique paiements" />
            </Menu>
            <Menu text="🏫 Ressources">
                <MenuItem text="📚 Ajouter salle de code" onAction="#loadAjouterSalle" />
                <MenuItem text="📚 Modifier salle de code" onAction="#loadModifierSalle" />
                <MenuItem text="👨‍🏫 Ajouter moniteur" onAction="#loadAjouterMoniteur" />
                <MenuItem text="📚 Modifier Moniteur " onAction="#loadModifierMoniteur" />
            </Menu>
            <Menu text="📊 Tableau de Bord">
                <MenuItem text="📈 Financier" />
                <MenuItem text="📊 Candidats" />
                <MenuItem text="🚗 Véhicules" />
            </Menu>
