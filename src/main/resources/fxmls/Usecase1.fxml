<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.cpi2.controllers.Usecase1"
           stylesheets="@/css/style2.css">

    <VBox spacing="15" alignment="CENTER" styleClass="form-container">

        <Label text="User Information" styleClass="form-title"/>

        <GridPane hgap="10" vgap="10" alignment="CENTER">

            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                <ColumnConstraints halignment="LEFT" minWidth="200" hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Name:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" promptText="Enter Name" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Age:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="ageField" promptText="Enter Age" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Gender:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <ComboBox fx:id="genderComboBox" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Male" />
                        <String fx:value="Female" />
                        <String fx:value="Other" />
                    </FXCollections>
                </items>
            </ComboBox>

            <Label text="Email:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="emailField" promptText="Enter Email" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Phone:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="phoneField" promptText="Enter Phone Number" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="cancelButton" text="Cancel" onAction="#cancelAction" styleClass="cancel-button" />
            <Button fx:id="confirmButton" text="Confirm" onAction="#confirmAction" styleClass="confirm-button" />
        </HBox>

    </VBox>
</StackPane>
