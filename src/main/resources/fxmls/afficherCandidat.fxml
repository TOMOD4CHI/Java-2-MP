<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.cpi2.controllers.AfficherCandidat"
            prefHeight="700.0" prefWidth="1000.0">
    
    <top>
        <HBox styleClass="header-container" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="Dossiers des Candidats" styleClass="page-title">
                <font>
                    <Font name="System Bold" size="18"/>
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField" promptText="Rechercher un candidat..." prefWidth="250"/>
            <Button text="Rafraîchir" onAction="#loadCandidats" styleClass="glass-button"/>
        </HBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.3" styleClass="content-container" VBox.vgrow="ALWAYS">
            
            <!-- Left Panel: Liste des Candidats -->
            <VBox styleClass="candidate-list-panel" spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                
                <Label text="Liste des Candidats" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
                
                <ListView fx:id="candidatListView" VBox.vgrow="ALWAYS" styleClass="candidate-list-view"/>
            </VBox>
            
            <!-- Right Panel: Détails et Documents -->
            <ScrollPane fitToWidth="true" styleClass="details-scroll-pane">
                <VBox fx:id="detailsContainer" styleClass="candidate-details-panel" spacing="20">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    
                    <!-- Personal Info Card -->
                    <VBox styleClass="info-card" spacing="15">
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15"/>
                        </padding>
                        
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <ImageView fx:id="candidatPhoto" fitWidth="80" fitHeight="80" preserveRatio="true">
                                <image>
                                    <Image url="/images/user_placeholder.png"/>
                                </image>
                            </ImageView>
                            
                            <VBox spacing="5">
                                <Label fx:id="fullNameLabel" text="Sélectionnez un candidat" styleClass="candidate-name">
                                    <font>
                                        <Font name="System Bold" size="18"/>
                                    </font>
                                </Label>
                                <Label fx:id="cinLabel" text="" styleClass="cin-label"/>
                            </VBox>
                        </HBox>
                        
                        <Separator/>
                        
                        <GridPane hgap="20" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="120"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            
                            <Label text="Adresse:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                            <Label fx:id="adresseLabel" text="" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="field-value"/>
                            
                            <Label text="Téléphone:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
                            <Label fx:id="telephoneLabel" text="" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="field-value"/>
                            
                            <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="field-label"/>
                            <Label fx:id="emailLabel" text="" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="field-value"/>
                            
                            <Label text="Date Naissance:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="field-label"/>
                            <Label fx:id="dateNaissanceLabel" text="" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="field-value"/>
                            
                            <Label text="Type Permis:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="field-label"/>
                            <Label fx:id="typePermisLabel" text="" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="field-value"/>
                        </GridPane>
                    </VBox>
                    
                    <!-- Documents Card -->
                    <VBox styleClass="documents-card" spacing="15">
                        <padding>
                            <Insets top="15" right="15" bottom="15" left="15"/>
                        </padding>
                        
                        <Label text="Documents Fournis" styleClass="section-title">
                            <font>
                                <Font name="System Bold" size="14"/>
                            </font>
                        </Label>
                        
                        <Separator/>
                        
                        <!-- CIN Documents -->
                        <TitledPane text="Carte d'identité" expanded="true" styleClass="document-section">
                            <VBox fx:id="cinDocumentsContainer" spacing="10" styleClass="documents-container"/>
                        </TitledPane>
                        
                        <!-- Permis Documents -->
                        <TitledPane text="Permis de conduire" expanded="true" styleClass="document-section">
                            <VBox fx:id="permisDocumentsContainer" spacing="10" styleClass="documents-container"/>
                        </TitledPane>
                        
                        <!-- Medical Documents -->
                        <TitledPane text="Certificats médicaux" expanded="true" styleClass="document-section">
                            <VBox fx:id="medicalDocumentsContainer" spacing="10" styleClass="documents-container"/>
                        </TitledPane>
                        
                        <!-- Other Documents -->
                        <TitledPane text="Autres documents" expanded="true" styleClass="document-section">
                            <VBox fx:id="otherDocumentsContainer" spacing="10" styleClass="documents-container"/>
                        </TitledPane>
                    </VBox>
                </VBox>
            </ScrollPane>
        </SplitPane>
    </center>
    
    <stylesheets>
        <String fx:value="/css/styletab.css"/>
        <String fx:value="/css/candidate-details.css"/>
    </stylesheets>
</BorderPane>
