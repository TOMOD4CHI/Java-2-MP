<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@/css/styletab.css"
            fx:controller="org.cpi2.controllers.AfficherCandidat"
            prefHeight="400.0" prefWidth="600.0">
    <children>

        <VBox layoutX="14.0" layoutY="14.0" spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <Label styleClass="page-title" text="Liste des Candidats:" alignment="TOP_CENTER" />

            <children>
                <TableView fx:id="candidatTable" styleClass="glass-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nomColumn" prefWidth="150.0" text="Nom" />
                        <TableColumn fx:id="prenomColumn" prefWidth="150.0" text="Prénom" />
                        <TableColumn fx:id="cinColumn" prefWidth="120.0" text="CIN" />
                        <TableColumn fx:id="adresseColumn" prefWidth="200.0" text="Adresse" />
                        <TableColumn fx:id="telephoneColumn" prefWidth="120.0" text="Téléphone" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" styleClass="glass-button" text="Rafraîchir" onAction="#loadCandidats" />
                    </children>
                </HBox>
            </children>
            <padding>

            </padding>
        </VBox>
    </children>

</AnchorPane>
