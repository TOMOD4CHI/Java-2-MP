<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.cpi2.controllers.AfficherSeance"
            stylesheets="@/css/style.css">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" spacing="15.0"
              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0"
              >
            <children>
                <Label styleClass="form-title" text="Liste des Séances" />


                <GridPane hgap="15" vgap="20" styleClass="glass-panel">


                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <!-- First row -->
                    <Label text="Type de séance:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <ComboBox fx:id="typeSessionFilter" promptText="Tous les types" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="ID du moniteur:" styleClass="form-label" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <TextField fx:id="moniteurIdFilter"
                               minHeight="35"
                               promptText="Entrer ID moniteur"
                               styleClass="form-field"
                               GridPane.columnIndex="3"
                               GridPane.rowIndex="0" />
                    <!-- Second row -->
                    <Label text="Date de début:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <DatePicker fx:id="dateDebutFilter" promptText="Date de début" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Date de fin:" styleClass="form-label" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <DatePicker fx:id="dateFinFilter" promptText="Date de fin" styleClass="form-field" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                    <!-- Third row - Action buttons -->
                    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="3" GridPane.rowIndex="2">
                        <Button fx:id="resetFiltersButton" text="Réinitialiser" styleClass="glass-button-secondary" />
                        <Button fx:id="applyFiltersButton" text="Appliquer" styleClass="glass-button" />
                    </HBox>
                </GridPane>

                <!-- Table Section -->
                <TableView fx:id="sessionTable" styleClass="glass-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="dateSessionColumn" prefWidth="100.0" text="Date" />
                        <TableColumn fx:id="heureSessionColumn" prefWidth="80.0" text="Heure" />
                        <TableColumn fx:id="moniteurColumn" prefWidth="150.0" text="Moniteur" />
                        <TableColumn fx:id="typeSessionColumn" prefWidth="100.0" text="Type" />
                        <TableColumn fx:id="prixColumn" prefWidth="80.0" text="Prix" />
                        <TableColumn fx:id="statutColumn" prefWidth="100.0" text="Statut" />
                        <TableColumn fx:id="detailsColumn" prefWidth="250.0" text="Détails" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <!-- Bottom Action Section -->
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" styleClass="glass-button" text="Rafraîchir" onAction="#loadSessions" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>