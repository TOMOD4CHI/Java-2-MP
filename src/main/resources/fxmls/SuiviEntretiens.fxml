<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@/css/stylee.css"
            fx:controller="org.cpi2.controllers.SuiviEntretiens"
            styleClass="main-container">

    <top>
        <VBox spacing="10" styleClass="header-container">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <Label text="Suivi des Entretiens" styleClass="title-label"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Véhicule:" />
                <ComboBox fx:id="vehiculeComboBox" prefWidth="250" promptText="Sélectionner un véhicule"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="refreshBtn" text="Actualiser"/>
            </HBox>

            <HBox spacing="20">
                <HBox spacing="5">
                    <Label text="Immatriculation:" styleClass="info-label"/>
                    <Label fx:id="immatriculationLabel" text="--"/>
                </HBox>
                <HBox spacing="5">
                    <Label text="Marque/Modèle:" styleClass="info-label"/>
                    <Label fx:id="marqueModeleLabel" text="--"/>
                </HBox>
                <HBox spacing="5">
                    <Label text="Kilométrage:" styleClass="info-label"/>
                    <Label fx:id="kilometrageLabel" text="--"/>
                </HBox>
                <HBox spacing="5">
                    <Label text="Dernier entretien:" styleClass="info-label"/>
                    <Label fx:id="dernierEntretienLabel" text="--"/>
                </HBox>
            </HBox>

            <Separator/>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.65" VBox.vgrow="ALWAYS">

            <!-- Left side - Table and Actions -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <HBox spacing="10">

                    <Button fx:id="marquerTermineBtn" text="Marquer comme terminé"
                            onAction="#handleMarquerTermine"/>
                    <Button fx:id="voirFactureBtn" text="Voir la facture"
                            onAction="#handleVoirFacture"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>

                <TableView fx:id="entretiensTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="dateCol" text="Date" prefWidth="90"/>
                        <TableColumn fx:id="typeCol" text="Type d'entretien" prefWidth="120"/>
                        <TableColumn fx:id="descriptionCol" text="Description" prefWidth="180"/>
                        <TableColumn fx:id="coutCol" text="Coût" prefWidth="70"/>
                        <TableColumn fx:id="statutCol" text="Statut" prefWidth="80"/>
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label fx:id="totalEntretiensLabel" text="Total: 0 entretiens"/>
                </HBox>
            </VBox>

            <!-- Right side - Scrollable Form -->
            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
                <VBox spacing="10" >

                    <Label text="Formulaire Entretien" styleClass="section-header"/>

                    <Label text="Date" styleClass="form-label"/>
                    <DatePicker fx:id="dateEntretienPicker" maxWidth="Infinity" styleClass="form-field"/>

                    <Label text="Type d'entretien" styleClass="form-label"/>
                    <ComboBox fx:id="typeEntretienCombo" maxWidth="Infinity" styleClass="form-field"/>

                    <Label text="Description" styleClass="form-label"/>
                    <TextArea fx:id="descriptionArea" prefHeight="60" wrapText="true" styleClass="form-field"/>

                    <Label text="Coût" styleClass="form-label" />
                    <TextField fx:id="coutField" styleClass="form-field"/>

                    <Label text="Statut" styleClass="form-label"/>
                    <ComboBox fx:id="statutCombo" maxWidth="Infinity" styleClass="form-field"/>

                    <Label text="Facture" styleClass="form-label"/>
                    <HBox spacing="5">
                        <TextField fx:id="factureField" HBox.hgrow="ALWAYS" editable="false"/>
                        <Button text="..." onAction="#handleChoisirFacture"/>
                    </HBox>

                    <Region VBox.vgrow="ALWAYS"/>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button fx:id="annulerEntretienBtn" text="Annuler"
                                onAction="#handleAnnulerEntretien"/>
                        <Button fx:id="enregistrerEntretienBtn" text="Enregistrer"
                                onAction="#handleEnregistrerEntretien"/>
                    </HBox>

                    <Separator/>



                </VBox>
            </ScrollPane>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="status-bar">
            <padding>
                <Insets top="5" right="15" bottom="5" left="15"/>
            </padding>
            <Label fx:id="statusEntretienLabel" text="Prêt" HBox.hgrow="ALWAYS"/>
            <Label text="Coût total:"/>
            <Label fx:id="coutTotalLabel" text="0 €"/>
            <Label text="Entretiens planifiés:"/>
            <Label fx:id="nbPlanifiesLabel" text="0"/>
        </HBox>
    </bottom>

</BorderPane>
