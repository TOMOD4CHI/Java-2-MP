<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="org.cpi2.controllers.GestionSeances"
            stylesheets="@/css/style.css">
    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>

    <top>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Gestion des Séances" styleClass="main-title">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" styleClass="tabpane-styled">
            <Tab text="Planifier une séance">
                <VBox spacing="20" styleClass="content-box">
                    <padding>
                        <Insets top="20" right="25" bottom="20" left="25"/>
                    </padding>
                    
                    <VBox spacing="15" styleClass="form-box">
                        <padding>
                            <Insets top="15" right="20" bottom="15" left="20"/>
                        </padding>
                        <effect>
                            <DropShadow color="#00000022" radius="10" spread="0.05"/>
                        </effect>
                        
                        <HBox alignment="CENTER" spacing="20">
                            <Label text="Type de séance:" styleClass="form-label"/>
                            <ComboBox fx:id="typeSeanceComboBox" promptText="Sélectionner le type" prefWidth="200">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Conduite" />
                                        <String fx:value="Code" />
                                        <String fx:value="Examen blanc" />
                                    </FXCollections>
                                </items>
                            </ComboBox>
                        </HBox>
                        
                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="120"/>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                                <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="120"/>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                            </columnConstraints>
                            
                            <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
                            <DatePicker fx:id="datePicker" promptText="JJ/MM/AAAA" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                            
                            <Label text="Heure:" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="form-label"/>
                            <ComboBox fx:id="heureComboBox" promptText="Sélectionner l'heure" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                            
                            <Label text="Durée (min):" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
                            <ComboBox fx:id="dureeComboBox" promptText="Sélectionner la durée" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            
                            <Label text="Moniteur:" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="form-label"/>
                            <ComboBox fx:id="moniteurComboBox" promptText="Sélectionner un moniteur" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                            
                            <Label text="Candidat:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
                            <ComboBox fx:id="candidatComboBox" promptText="Sélectionner un candidat" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            
                            <Label text="Véhicule:" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="form-label" fx:id="vehiculeLabel"/>
                            <ComboBox fx:id="vehiculeComboBox" promptText="Sélectionner un véhicule" GridPane.columnIndex="3" GridPane.rowIndex="2" 
                                      fx:id="vehiculeCombo" disable="true"/>
                        </GridPane>
                        
                        <HBox alignment="CENTER" spacing="15">
                            <Button text="Planifier la séance" onAction="#handlePlanifierSeance" styleClass="button-primary"/>
                            <Button text="Réinitialiser" onAction="#handleReinitialiser" styleClass="button-secondary"/>
                        </HBox>
                    </VBox>
                </VBox>
            </Tab>
            
            <Tab text="Liste des séances">
                <VBox spacing="15" styleClass="content-box">
                    <padding>
                        <Insets top="20" right="25" bottom="20" left="25"/>
                    </padding>
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <ComboBox fx:id="filtreTypeComboBox" promptText="Type de séance"/>
                        <ComboBox fx:id="filtreStatutComboBox" promptText="Statut"/>
                        <DatePicker fx:id="filtreDate" promptText="Date"/>
                        <Button text="Filtrer" onAction="#handleFiltrer" styleClass="button-primary"/>
                        <Button text="Réinitialiser" onAction="#handleResetFiltre" styleClass="button-secondary"/>
                    </HBox>
                    
                    <TableView fx:id="seancesTableView" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn text="Date" fx:id="dateColumn"/>
                            <TableColumn text="Heure" fx:id="heureColumn"/>
                            <TableColumn text="Durée" fx:id="dureeColumn"/>
                            <TableColumn text="Type" fx:id="typeColumn"/>
                            <TableColumn text="Moniteur" fx:id="moniteurColumn"/>
                            <TableColumn text="Candidat" fx:id="candidatColumn"/>
                            <TableColumn text="Véhicule" fx:id="vehiculeColumn"/>
                            <TableColumn text="Statut" fx:id="statutColumn"/>
                        </columns>
                        <effect>
                            <DropShadow color="#00000022" radius="10" spread="0.05"/>
                        </effect>
                    </TableView>
                    
                    <HBox spacing="15" alignment="CENTER">
                        <Button text="Modifier" onAction="#handleModifier" styleClass="button-primary"/>
                        <Button text="Annuler la séance" onAction="#handleAnnuler" styleClass="button-warning"/>
                        <Button text="Marquer comme terminée" onAction="#handleTerminer" styleClass="button-success"/>
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10" styleClass="footer">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Système de Gestion d'Auto-École" styleClass="footer-text"/>
        </HBox>
    </bottom>
</BorderPane> 