<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Rectangle?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.cpi2.controllers.AjouterEcole"
           stylesheets="@/css/style.css"
           alignment="CENTER">

    <BorderPane maxWidth="700" maxHeight="600">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <center>
            <ScrollPane fitToWidth="true" styleClass="transparent-scroll-pane">
                <VBox styleClass="form-container" spacing="20" alignment="CENTER">
                    <padding>
                        <Insets top="20" right="25" bottom="25" left="25"/>
                    </padding>

                    <StackPane styleClass="title-wrapper">
                        <Label text="Ajouter une École" styleClass="form-title"/>
                    </StackPane>

                    <Separator styleClass="form-separator">
                        <VBox.margin>
                            <Insets top="5" bottom="20"/>
                        </VBox.margin>
                    </Separator>

                    <GridPane hgap="15" vgap="15" alignment="CENTER">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" minWidth="120" prefWidth="150"/>
                            <ColumnConstraints halignment="LEFT" minWidth="250" prefWidth="350" hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Nom de l'école:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <TextField fx:id="nomField" promptText="Entrez le nom de l'école" styleClass="form-field"/>
                        </VBox>

                        <Label text="Adresse:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <TextField fx:id="adresseField" promptText="Entrez l'adresse complète" styleClass="form-field"/>
                        </VBox>

                        <Label text="Téléphone:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <TextField fx:id="telephoneField" promptText="Ex: +212 500000000" styleClass="form-field"/>
                        </VBox>

                        <Label text="Email:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <TextField fx:id="emailField" promptText="contact@ecole.ma" styleClass="form-field"/>
                        </VBox>

                        <Label text="Logo:" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4" alignment="CENTER_LEFT">
                            <StackPane>
                                <Rectangle width="120" height="120" arcWidth="15" arcHeight="15" styleClass="logo-background" fill="white" stroke="#BEE3F8"/>
                                <ImageView fx:id="logoImageView" fitWidth="110" fitHeight="110" preserveRatio="true" styleClass="logo-image"/>
                            </StackPane>
                            <Button text="Choisir un Logo" onAction="#handleLogoUpload" styleClass="button">
                                <graphic>
                                    <Label text="+" styleClass="icon-3d-text"/>
                                </graphic>
                            </Button>
                        </VBox>
                    </GridPane>

                    <HBox spacing="20" alignment="CENTER" styleClass="button-container">
                        <VBox.margin>
                            <Insets top="25" bottom="10"/>
                        </VBox.margin>
                        <Button text="Annuler" onAction="#handleCancel" styleClass="button, cancel-button"/>
                        <Button text="Ajouter l'École" onAction="#handleAjouterEcole" styleClass="button, submit-button"/>
                    </HBox>
                </VBox>
            </ScrollPane>
        </center>
    </BorderPane>
</StackPane>