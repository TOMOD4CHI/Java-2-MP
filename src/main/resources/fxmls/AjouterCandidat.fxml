<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.cpi2.controllers.AjouterCandidat"
            stylesheets="@/css/style.css"
            fitToWidth="true" fitToHeight="true"
            styleClass="transparent-scroll-pane"
            VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
<StackPane alignment="CENTER">
<VBox alignment="CENTER" spacing="20" styleClass="form-container" maxWidth="650" StackPane.alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Inscription" styleClass="form-title"/>

    <GridPane hgap="15" vgap="10" alignment="CENTER" maxWidth="600">

            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                <ColumnConstraints halignment="LEFT" minWidth="200" hgrow="ALWAYS"/>
            </columnConstraints>

        
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="nomField" promptText="Entrer le nom" styleClass="form-field"/>
            <Label fx:id="nomError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0;"/>
        </VBox>

        
        <Label text="Prénom:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <TextField fx:id="prenomField" promptText="Entrer le prénom" styleClass="form-field"/>
            <Label fx:id="prenomError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0;"/>
        </VBox>

        
        <Label text="Cin:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <TextField fx:id="cinField" promptText="Entrer le CIN" styleClass="form-field"/>
            <Label fx:id="cinError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0;"/>
        </VBox>

        
        <Label text="Type de permis:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <ComboBox fx:id="typeComboBox" styleClass="form-field" maxWidth="Infinity">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Moto" />
                        <String fx:value="Voiture" />
                        <String fx:value="Camion" />
                    </FXCollections>
                </items>
            </ComboBox>
            <Label fx:id="typeError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0;"/>
        </VBox>

        
        <Label text="Adresse:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <TextField fx:id="addressField" promptText="Entrer l'adresse" styleClass="form-field"/>
            <Label fx:id="addressError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0;"/>
        </VBox>

        
        <Label text="Téléphone:" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <TextField fx:id="phoneField" promptText="Entrer le téléphone" styleClass="form-field"/>
            <Label fx:id="phoneError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0;"/>
        </VBox>

        
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="6" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <TextField fx:id="emailField" promptText="Entrer l'email" styleClass="form-field"/>
            <Label fx:id="emailError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0;"/>
        </VBox>
        
        <Label text="Date de naissance:" GridPane.columnIndex="0" GridPane.rowIndex="7" styleClass="form-label"/>
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <DatePicker fx:id="birthDatePicker" promptText="Choisir la date de naissance" styleClass="form-field" maxWidth="Infinity"/>
            <Label fx:id="birthDateError" styleClass="error-label" style="-fx-font-size: 10px; -fx-padding: 0;"/>
        </VBox>
        
        <Label text="Mode de paiement:" GridPane.columnIndex="0" GridPane.rowIndex="8" styleClass="form-label" />
        <VBox spacing="2" styleClass="field-container" GridPane.columnIndex="1" GridPane.rowIndex="8">
            <ComboBox fx:id="modeComboBox" styleClass="form-field" maxWidth="Infinity">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Mensuel" />
                        <String fx:value="Hebdomadaire " />
                        <String fx:value="Trimestriel" />
                        <String fx:value="Totale"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </VBox>

    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="cancelButton" text="Annuler" onAction="#cancelAction" styleClass="cancel-button" />
        <Button fx:id="confirmButton" text="Confirmer" onAction="#confirmAction" styleClass="button, submit-button" />
    </HBox>

</VBox>
</StackPane>
</ScrollPane>
